{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "1.) Build the libraries",
			"type": "shell",
			"script": "./_build/autohotkey.exe ./_build/build.ahk",
			"windows": {
				"command": ".\\_build\\autohotkey.exe .\\_build\\build.ahk"
			},
			"presentation": {
				"panel": "shared"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "2.) Build the documentation",
			"type": "shell",
			"script": "${workspaceRoot}/_build/autohotkey.exe ${workspaceRoot}/_build/mkdoc.ahk",
			"windows": {
				"command": "${workspaceRoot}\\_build\\autohotkey.exe ${workspaceRoot}\\_build\\mkdoc.ahk"
			},
			"presentation": {
				"panel": "shared"
			},
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"options": {
				"cwd": "${workspaceRoot}/_build"
			}
		}
	]
}
